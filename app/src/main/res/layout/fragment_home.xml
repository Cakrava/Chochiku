<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    ini adalah navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/atas">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/sapa"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
            android:text=""/>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp">
                    <ImageView
                        android:id="@+id/preview_akun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>
       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_width="match_parent"
           android:layout_height="@dimen/_50sdp"
           android:orientation="vertical"
           android:padding="@dimen/_5sdp"
           android:background="@drawable/blue_square_transparant">
           <TextView
               android:id="@+id/tv_masa"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/_10sdp"
               android:textColor="@color/white"
               android:text=""/>
      <LinearLayout
          android:layout_marginTop="@dimen/_3sdp"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/_20sdp"
          android:gravity="center"
          android:orientation="horizontal"
          android:backgroundTint="@color/white"
          android:background="@drawable/blue_square_transparant">

          <TextView

              android:layout_marginLeft="@dimen/_10sdp"
              android:id="@+id/tv_hari"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_10sdp"
              android:text="Senin"/>

          <TextView


              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_10sdp"
              android:text=","/>
          <TextView

              android:layout_marginRight="@dimen/_10sdp"
              android:layout_marginLeft="@dimen/_2sdp"
              android:id="@+id/tanggal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="@dimen/_10sdp"
              android:text="belum diatur"/>
      </LinearLayout>
       </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="-25dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_square"
        android:padding="@dimen/_2sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
         android:gravity="center"
            android:layout_marginRight="@dimen/_5sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/rounded_square_low"
            android:orientation="horizontal">

            <ImageView
                android:tint="@color/hijau_tua"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon"/>
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/_10ssp"
                        android:text="Tabungan"/>
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/abuabu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
            <TextView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_saldo"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:text="Rp."/>
                </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/rounded_square_low"
                android:orientation="horizontal">

                <ImageView
                    android:tint="@color/hijau_tua"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon"/>
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       android:textSize="@dimen/_10ssp"
                        android:text="Hutang"/>
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/abuabu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>
                    <TextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hutang"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"
                        android:text="Rp."/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:background="@drawable/rounded_square_low"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_105sdp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_square"
                android:layout_height="@dimen/_90sdp">
<!--                <LinearLayout-->
<!--                    android:gravity="center"-->
<!--                    android:orientation="vertical"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->
<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerInParent="true"-->
<!--                        android:text="Stamp"-->
<!--                        android:textSize="@dimen/_10ssp" />-->
<!--                    <RelativeLayout-->
<!--                        android:background="@color/abuabu"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="@dimen/_1sdp"/>-->
<!--                </LinearLayout>-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_gravity="center"

            android:padding="@dimen/_3sdp">
            <TextView
                android:id="@+id/id_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/_20ssp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_vertical"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress_drawable"
                android:progressTint="@color/hijau_main" />



        </FrameLayout>

                <RelativeLayout
                    android:layout_marginTop="-5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="-"
                        android:textColor="@color/hijau_tua2"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_2sdp">
                <LinearLayout
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                   android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_square"
                    android:padding="@dimen/_8sdp">
                    <Button
                        android:id="@+id/btn_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/refresh"
                        app:backgroundTint="@color/hijau_tua2"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_square"
                    android:padding="@dimen/_8sdp">
                    <Button
                        android:id="@+id/btn_tabung"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabung"
                        app:backgroundTint="@color/hijau_tua2"/>
                </LinearLayout>

                </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
   <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_square"
        android:padding="@dimen/_10sdp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/masa"
            android:text="Bayar hutang berdasarkan nominal"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="@dimen/_190sdp"
                android:orientation="vertical"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/rounded_square">
                <EditText
                    android:id="@+id/ed_bayarhutang"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Masukkan Nominal"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="@dimen/_60sdp"
                android:orientation="vertical"
                android:layout_height="@dimen/_30sdp"
                android:backgroundTint="@color/hijau_tua"
            >
                <ImageButton
                    android:tint="@color/hijau_tua2"
                    android:id="@+id/btn_bayarhutang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/i_hutang"
                    android:background="@android:color/transparent"
                    android:hint="Bayar"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Riwayat"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/item_riwayat"
        app:reverseLayout="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/tv_riwayat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <pl.droidsonroids.gif.GifImageView
            android:src="@drawable/loader"
            android:id="@+id/gifloader"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"

            />
    </LinearLayout>
</FrameLayout>

</RelativeLayout>