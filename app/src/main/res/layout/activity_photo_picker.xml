<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoPicker"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <androidx.cardview.widget.CardView

        app:cardCornerRadius="@dimen/_100sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <RelativeLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_300sdp">
        <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_photo"
        android:id="@+id/img_view"/>
    </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp">
                <ImageButton
                    android:id="@+id/btn_v1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"/>
                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_100sdp">
                <ImageView
                    android:id="@+id/view_pref1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_photo"/>
                </RelativeLayout>

            </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <ImageButton
                        android:id="@+id/btn_v2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp">
                        <ImageView
                            android:id="@+id/view_pref2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_photo"/>
                    </RelativeLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <ImageButton
                        android:id="@+id/btn_v3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp">
                        <ImageView
                            android:id="@+id/view_pref3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_photo"/>
                    </RelativeLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <ImageButton
                        android:id="@+id/btn_v4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp">
                        <ImageView
                            android:id="@+id/view_pref4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_photo"/>
                    </RelativeLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <ImageButton
                        android:id="@+id/btn_v5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp">
                        <ImageView
                            android:id="@+id/view_pref5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_photo"/>
                    </RelativeLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_100sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">
                    <ImageButton
                        android:id="@+id/btn_v6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_100sdp">
                        <ImageView
                            android:id="@+id/view_pref6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_photo"/>
                    </RelativeLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ok"
        android:id="@+id/btn_simpan"/>


</LinearLayout>